/ {
    chosen {
        hci = &uart1;
    };
};

&pinctrl {
    uart1_default_alt: uart1_default_alt {
        group1 {
            psels = <NRF_PSEL(UART_RX, 1, 1)>,
                    <NRF_PSEL(UART_TX, 1, 2)>;
        };
    };
 };
 
&uart1 {
    current-speed = <57600>;
    pinctrl-0 = <&uart1_default_alt>;
    status = "okay";
};